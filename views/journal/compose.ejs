<%layout('layout/boilerplate')-%>
<div class="row mt-5">
<h1>Compose</h1>
<form action="/journal/compose" method="POST">
    <label class="form-label" for="postTitle">Title</label>
    <input class="form-control" type="text" name="postTitle" id="postTitle">
    <label class="form-label" for="pp">Post</label>
    <textarea class="form-control" name="pp" id="pp" cols="30" rows="10"></textarea>
    <button class="btn btn-success btn-sm mt-2">Publish</button>
</form>
</div>